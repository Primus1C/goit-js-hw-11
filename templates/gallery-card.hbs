{{#each this}}
<div class="photo-card">
    <a class="gallery__link" href="{{largeImageURL}}">
    <img class="photo-card-img" src="{{webformatURL}}" alt="{{tags}}" loading="lazy" />
    <div class="info">
        <div class="info-title">Likes
            <p class="info-item">
                <b>{{likes}}</b>
            </p>
        </div>
        <div class="info-title">Views
            <p class="info-item">
                <b>{{views}}</b>
            </p>
        </div>
        <div class="info-title">Comments
            <p class="info-item">
                <b>{{comments}}</b>
            </p>
        </div>
        <div class="info-title">Downloads
            <p class="info-item">
                <b>{{downloads}}</b>
            </p>
        </div>
    </div>
    </a>
</div>
{{/each}}